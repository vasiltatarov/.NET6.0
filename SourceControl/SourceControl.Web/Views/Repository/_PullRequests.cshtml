@model RepositoryDetailsPageViewModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Pull Requests</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="" asp-controller="Repository" asp-action="CreatePullRequest" asp-route-repoId="@Model.Repository.Id" class="btn btn-primary">
				<i class="bi bi-pencil-square">&nbsp; New Pull Requests</i>
			</a>
		</div>
	</div>
	<hr />
	@foreach (var pr in Model.PullRequests)
	{
		<h1>Title: @pr.Title</h1>
		<p>Description: @pr.Description</p>
		<p>From: @pr.UserEmail</p>
	}
</div>