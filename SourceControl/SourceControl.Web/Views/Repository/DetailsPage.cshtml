@model RepositoryDetailsPageViewModel

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>@Model.Repository.Name</h1>
        </div>
        <div class="col-6 text-end">
            @if (Model.Repository.UserId == User.UserId())
            {
                <a asp-controller="Repository" asp-action="Edit" asp-route-id="@Model.Repository.Id" class="btn btn-primary m-2">
                    <i class="bi bi-pencil">&nbsp; Edit</i>
                </a>
                <a asp-controller="Repository" asp-action="Delete" asp-route-id="@Model.Repository.Id" class="btn btn-warning">
                    <i class="bi bi-trash3">&nbsp; Delete</i>
                </a>
            }
        </div>
        <ul class="nav nav-tabs mt-2" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" data-bs-toggle="tab" href="#code" aria-selected="true" role="tab">Code</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#issues" aria-selected="false" role="tab" tabindex="-1">Issues</a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" data-bs-toggle="tab" href="#pullRequests" aria-selected="false" role="tab" tabindex="-1">Pull Requests</a>
            </li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade active show" id="code" role="tabpanel">
                <partial name="_Code" model="Model.Repository.Source" />
            </div>
            <div class="tab-pane fade" id="issues" role="tabpanel">
                <partial name="_Issues" model="Model" />
            </div>
            <div class="tab-pane fade" id="pullRequests" role="tabpanel">
                <partial name="_PullRequests" model="Model.Repository.Source" />
            </div>
        </div>
        <hr />
    </div>
</div>
