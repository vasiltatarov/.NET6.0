@model RepositoryDetailsPageViewModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2>All Issues</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-area="" asp-controller="Repository" asp-action="CreateIssue" asp-route-repoId="@Model.Repository.Id" class="btn btn-primary">
				<i class="bi bi-pencil-square">&nbsp; New Issue</i>
			</a>
		</div>
	</div>
	<hr />
	@foreach (var issue in Model.Issues)
	{
		<h1>Title: @issue.Title</h1>
		<p>Comment: @issue.Comment</p>
		<p>From: @issue.UserEmail</p>
	}
</div>