@model IEnumerable<RepositoryDto>

<partial name="_Notification" />

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2>Your Repositories</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Repository" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-pencil-square">&nbsp; New Repository</i>
			</a>
		</div>
	</div>
	<hr />
</div>

<div class="row 12">
	@foreach (var repo in Model)
	{
		<div class="card col-4 mb-3 pb-3">
			<h3 class="card-header">@repo.Name</h3>
			<div class="card-body">
				<p class="card-text">@(repo.Description ?? "-")</p>
				<span class="badge bg-primary">@repo.Type</span>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">License: @repo.License</li>
			</ul>
			<div class="card-footer text-muted">
				@repo.CreatedOn.ToShortDateString()
			</div>
			<hr>
			<a asp-controller="Repository" asp-action="DetailsPage" asp-route-id="@repo.Id" class="btn btn-success">View Details</a>
		</div>
	}
</div>